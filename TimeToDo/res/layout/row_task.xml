<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lnr_task_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_input_textfield"
            android:orientation="horizontal"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/lnr_task_select"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" >

                <CheckBox
                    android:id="@+id/chk_select"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:button="@drawable/cbox_sex"
                    android:checked="false"
                    android:padding="5dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_task"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Jignesh"
                android:textColor="@color/black" />

            <LinearLayout
                android:id="@+id/lnr_task_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/img_task_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_home_row_edit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_task_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/img_task_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/ic_home_row_wrong" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>